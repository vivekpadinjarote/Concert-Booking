<h1 class="head mt-5">Events</h1>
<div class="container mt-4" >
    <% events.forEach(event => { %>
      <div class="card event-card mb-4 bg-dark text-light" >
        <div class="row no-gutters">
          <div class="col-md-3">
            <img src="data:image/*;base64,<%=event.coverPic%>" class="card-img event-img" alt="Event Image" style="height: 100%;width: 100%; object-fit:cover;">
          </div>
          <div class="col-md-7 text-center">
            <div class="card-body">
              <h4 class="card-title pb-2"><b><%= event.concertName %></b></h5>
              <p class="card-text" style="display: inline-block; margin-right: 3%;"><strong>Location:</strong> <%= event.location %></p>
              <p class="card-text" style="display: inline-block; margin-right: 3%;"><strong>Date:</strong> <%= event.date %></p>
              <p class="card-text" style="display: inline-block; margin-right: 3%;"><strong>Time:</strong> <%= event.eventTime %></p>
              <p class="card-text" style="display: inline-block; margin-right: 3%;" ><strong>Price:</strong> <%= event.price %> Rs</p>
              <p class="card-text" style="display: inline-block; margin-right: 3%;"><strong>Tickets Available:</strong> <%= event.ticketsAvailable %></p>
            </div>
          </div>
          <div class="col-md-2 my-auto bg-primary rounded-left">
            <a href="/booking/details/<%=event._id%>" class="btn event-btn btn-primary " style="display: inline-block; width: 100%;" >Details</a>
            </div>
        </div>
      </div>
    <% }) %>
  </div>

  <nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
  
      <% if (pagination.hasPrevPage) { %>
        <li class="page-item">
          <a class="page-link" href="?page=1" aria-label="First">
            <span aria-hidden="true">&laquo; First</span>
          </a>
        </li>
        <li class="page-item">
          <a class="page-link" href="?page=<%= pagination.prevPage %>" aria-label="Previous">
            <span aria-hidden="true">&lsaquo; Prev</span>
          </a>
        </li>
      <% } else { %>
        <li class="page-item disabled">
          <a class="page-link" href="#"><span>&laquo; First</span></a>
        </li>
        <li class="page-item disabled">
          <a class="page-link" href="#"><span>&lsaquo; Prev</span></a>
        </li>
      <% } %>
  
      <% for (let page_number = 1; page_number <= pagination.totalPages; page_number++) { %>
        <li class="page-item <%= pagination.page === page_number ? 'active' : '' %>">
          <a class="page-link" href="?page=<%= page_number %>"><%= page_number %></a>
        </li>
      <% } %>
  
      <% if (pagination.hasNextPage) { %>
        <li class="page-item">
          <a class="page-link" href="?page=<%= pagination.nextPage %>" aria-label="Next">
            <span aria-hidden="true">Next &rsaquo;</span>
          </a>
        </li>
        <li class="page-item">
          <a class="page-link" href="?page=<%= pagination.totalPages %>" aria-label="Last">
            <span aria-hidden="true">Last &raquo;</span>
          </a>
        </li>
      <% } else { %>
        <li class="page-item disabled">
          <a class="page-link" href="#"><span>Next &rsaquo;</span></a>
        </li>
        <li class="page-item disabled">
          <a class="page-link" href="#"><span>Last &raquo;</span></a>
        </li>
      <% } %>
  
    </ul>
  </nav>
  