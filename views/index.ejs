<div id="carouselExampleControls"  class="carousel slide row-md-5" data-ride="carousel">
  <div class="carousel-inner" >
    <div class="carousel-item active">
      <img src="/images/banner1.jpg" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="/images/banner2.jpg" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="/images/banner3.jpg" class="d-block w-100" alt="...">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-target="#carouselExampleControls" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-target="#carouselExampleControls" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </button>
</div>

<div class="container mt-5">

  <h3 class="head-one text-danger mb-3">WHAT'S NEW:</h3>
  <div class="row row-cols-1 row-cols-md-3">
    <% events.forEach(event=>{ %>
    <div class="col mb-4 " >
      <div class="card h-100 bg-dark text-light " >
        <img src="data:image/*;base64,<%= event.coverPic %>" class="card-img-top" alt="Event Image" style="width: 100%; height: 40%; object-fit: centre; ">
        <div class="card-body">
          <h5 class="card-title"><b><%= event.concertName %></b></h5>
          <p class="card-text"><b>Location:</b> <%= event.location %></p>
          <p class="card-text"><b>Date:</b> <%= event.date %></p>
          <p class="card-text"><b>Time: </b> <%= event.eventTime %></p>
        </div>
        <div class="btn">
          <a href="/booking/details/<%= event._id %>" class="btn btn-primary">Details</a>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>

<div class="section-bg text-light" style="text-align: center;">
  <h3>Signup to Concert Nation</h3>
  <h5>Dive into more</h5>
  <form class="d-flex">
    <a href="/users" class="btn btn-light text-danger" style="font-size: x-small; margin: auto; font-weight: bold;">Signup</a>
  </form>
</div>
